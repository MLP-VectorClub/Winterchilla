{# @var user \App\Models\User #}
{# @var with_avatar bool #}
{# @var enable_promises bool #}
{# @var with_vector_app_icon bool #}
{% apply spaceless %}
  <a href='{{ user.toURL(false) }}' class='da-userlink local{{ with_avatar ? ' with-avatar' : '' }}'>
    {% if with_avatar %}
      {% if enable_promises %}
        <div class='user-avatar-promise avatar image-promise' data-src='{{ user.get_avatar_url }}'></div>
      {% else %}
        <img src='{{ user.get_avatar_url }}' class='avatar' alt='avatar'>
      {% endif %}
    {% endif %}
    <span class='name'>{{ user.name | escape }}</span>
    {% if with_vector_app_icon %}
      {{ user.vectorAppIcon }}
    {% endif %}
  </a>
{% endapply %}
